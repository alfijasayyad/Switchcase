#Program

import java.util.Scanner;
public class Switchcase {
  
  public static void main(String[]args){
    
    int choice;
    System.out.println("Pick one:1.Pizza\t2.Burger\t3.Salad\t4.Vegetables");
    Scanner sc = new Scanner(System.in);
    choice=sc.nextInt();
    switch(choice)
    {
      case 1: System.out.println("I Like Pizza");
            break;
      case 2: System.out.println("I Like Burger");
            break;
      case 3: System.out.println("I Like Salad ");
            break;
      case 4: System.out.println("I Like Healthy food");
            break;
      case 5: System.out.println("Invaid Choice");   
      
    }
  }
}
 
 
 #Output
 
Pick one:1.Pizza  2.Burger  3.Salad  4.Vegetables
4
I Like Healthy food

